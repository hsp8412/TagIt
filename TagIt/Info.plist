<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>tagit</string>
            </array>
            <key>CFBundleURLName</key>
            <string>com.yourdomain.tagit</string>
        </dict>
    </array>
    <key>NSCameraUsageDescription</key>
    <string>TagIt needs camera access to scan barcodes and take photos of products for deal sharing.</string>
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>TagIt uses your location to show you nearby deals and help you find the closest stores with the best prices.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>TagIt needs access to your photo library to let you choose product images for deals and reviews.</string>
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>TagIt needs permission to save deal images to your photo library when you want to save them for later.</string>
    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>
    <key>UILaunchScreen</key>
    <dict>
        <key>UIColorName</key>
        <string>launchScreenBackground</string>
        <key>UIImageName</key>
        <string>LaunchImage</string>
    </dict>
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>armv7</string>
    </array>
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
    </array>

    <key>ALGOLIA_APP_ID</key>
    <string>${ALGOLIA_APP_ID}</string>
    <key>ALGOLIA_API_KEY</key>
    <string>${ALGOLIA_API_KEY}</string>
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>TagItApp</string>
            </array>
            <key>CFBundleURLName</key>
            <string>com.tagit.app</string>
        </dict>
    </array>
</dict>
</plist>
